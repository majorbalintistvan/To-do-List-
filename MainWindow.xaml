<Window x:Class="To_do_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_do_list"
        mc:Ignorable="d"
        Title="To do list" Height="720" Width="1280" Background="WhiteSmoke">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#EBAB0A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Height" Value="440"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="ColumnHeaderHeight" Value="50"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10 20 10 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#EBAB0A" CornerRadius="20" Margin="0,0,10,0">
            <TextBlock Grid.Column="0" Text="TO-DO-LIST" Width="275"/>
        </Border>
        <Border Background="#EBAB0A" CornerRadius="20" Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Grid.Column="1" Text="GRAPHS" Width="200"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Add_BTN" Content="ADD" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="14" Click="Add_BTN_Click"></Button>
                <Button x:Name="Save_BTN" Grid.Column="0" Content="SAVE" Margin="14"></Button>
                <Button x:Name="Clear_BTN" Grid.Column="0" Content="CLEAR" Margin="14"/>
            </StackPanel>
            <DataGrid AutoGenerateColumns="False" x:Name="tdlist_DTGD" IsReadOnly="True" SelectionMode="Single" Margin="14,0,5,0" ItemsSource="{Binding Task_list}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task" Width="2*" Binding="{Binding Task_text}" FontSize="30" />
                    <DataGridTextColumn Header="Due Date" Width="*" Binding="{Binding Date}"  FontSize="30"/>
                    <DataGridCheckBoxColumn Header="Finished" Width="*" Binding="{Binding IsDone}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Ellipse Grid.Column="1" Grid.Row="1"  Stroke="DarkRed" StrokeThickness="20" Width="300" Height="300"/>
        
    </Grid>
</Window>
