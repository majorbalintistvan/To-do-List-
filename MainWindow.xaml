<Window x:Class="To_do_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_do_list"
        xmlns:oxy="http://oxyplot.org/wpf"
        Closing="Window_Closing"
        mc:Ignorable="d"
        Title="To Do List" Height="720" Width="1280" Background="WhiteSmoke">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#EBAB0A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Height" Value="440"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="ColumnHeaderHeight" Value="50"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10 20 10 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#EBAB0A" CornerRadius="20" Margin="0,0,10,0">
            <TextBlock Grid.Column="0" Text="TO-DO-LIST" Width="275"/>
        </Border>
        <Border Background="#EBAB0A" CornerRadius="20" Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Grid.Column="1" Text="GRAPHS" Width="200"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Add_BTN" Content="ADD" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="14" Click="Add_BTN_Click"></Button>
                <Button x:Name="Save_BTN" Grid.Column="0" Content="SAVE" Margin="14" Click="Save_BTN_Click"></Button>
                <Button x:Name="Clear_BTN" Grid.Column="0" Content="CLEAR" Margin="14" Click="Clear_BTN_Click"/>
            </StackPanel>
            <DataGrid AutoGenerateColumns="False" x:Name="tdlist_DTGD"  SelectionMode="Single" Margin="10,0,5,0" ItemsSource="{Binding Task_list}" CanUserAddRows="False" SelectionUnit="Cell">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task" Width="2*" Binding="{Binding Task_text}" FontSize="25"/>
                    <DataGridTextColumn Header="Due Date" Width="*" Binding="{Binding Date, TargetNullValue=N/A, StringFormat=yyyy-MM-dd}"  FontSize="25"/>
                    <DataGridTemplateColumn Header="Finished" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Viewbox Width="30" Height="30">
                                    <CheckBox IsChecked="{Binding IsDone}" IsHitTestVisible="False"/>
                                </Viewbox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <Viewbox Width="30" Height="30">
                                    <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Viewbox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <oxy:PlotView Grid.Row="1" Grid.Column="1" x:Name="plotView" Width="420" Height="420" Model="{Binding Chart.Model}"/>
    </Grid>
</Window>
