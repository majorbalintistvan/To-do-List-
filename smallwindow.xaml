<Window x:Class="To_do_list.smallwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_do_list"
        mc:Ignorable="d"
        Title="Add" Height="200" Width="420">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#EBAB0A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"  Background="#EBAB0A" CornerRadius="5" Width="80">
            <Label Content="Task: " Margin="5"/>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"  Background="#EBAB0A" CornerRadius="5" Width="110" Grid.Row="1">
            <StackPanel Grid.Row="1">
                <Label Content="Due Date: " Margin="10,0"/>
                <CheckBox x:Name="nodate_CB" Content="No due date" Margin="20,0,0,10" Foreground="White"/>
            </StackPanel>
        </Border>
        <StackPanel Grid.ColumnSpan="2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="smallsave_BTN" Content="Save" Margin="10,0,30,0" Width="120" Height="30"/>
            <Button x:Name="cancel_BTN" Content="Cancel" Margin="30,0,10,0" Width="120" Height="30" />
        </StackPanel>
        <TextBox x:Name="task_TB" Grid.Row="0" Grid.Column="1" Width="240" Margin="5"/>
    </Grid>
</Window>
